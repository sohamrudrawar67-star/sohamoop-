using namespace std;

int main() {
    for (int i = 10; i >= 0; i--) {
        cout << i << endl;
    }
    return 0;
}

//code6
#include <iostream>
using namespace std;

int main() {
    int rows = 5; // Default number of rows
    for (int i = 1; i <= rows; i++){
        // Loop to print spaces (for alignment)
        for (int j = 1; j <= rows - i; j++) {
            cout << " ";
        }
        // Loop to print stars
        for (int k = 1; k <= i; k++){ 
            cout << "*"; 
        }
        cout << endl;
    }
    return 0;
}


