#include <iostream>
using namespace std;

int main() {
    int a, b;
    cout << "Enter the first number" << endl;
    cin >> a;
    cout << "Enter the second number" << endl;
    cin >> b;
    cout << "The sum of the 2 numbers is = " << a + b << endl;
    return 0;
}

//code 2
#include <iostream>
using namespace std;

int main () {
    int num;
    cout << "Enter the number: " << endl;
    cin >> num;
    
    if (num % 2 == 0) {
        cout << "Number is even." << endl;
    } else {
        cout << "The number is odd." << endl;
    }
    return 0;
}


//code 3
#include <iostream>
using namespace std;

int main() {
    int num1, num2;
    char operation;

    cout << "Enter number 1: " << endl;
    cin >> num1;
    cout << "Enter number 2: " << endl;
    cin >> num2;
    cout << "Enter the operation (+, -, *, /, %): " << endl;
    cin >> operation;

    switch (operation) {
        case '+':
            cout << "Sum = " << num1 + num2 << endl;
            break;
        case '-':
            cout << "Subtraction = " << num1 - num2 << endl;
            break;
        case '*':
            cout << "Product = " << num1 * num2 << endl;
            break;
        case '/':
            // Using (float) for accurate division
            cout << "Division = " << (float)num1 / num2 << endl; 
            break;
        case '%':
            cout << "Remainder = " << num1 % num2 << endl;
            break;
        default:
            cout << "Invalid operation." << endl;
    }
    return 0;
}


